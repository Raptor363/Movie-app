<%- include("../partials/header") %>

<div id="hero-image">
    <h1 id="hero-title"><b>WATCHER: STAR WARS</b></h1>
</div>


<div id="posters-wrapper" class="content-padding clearfix">

    <% movies.forEach(function(movie){ %>
        <div class="col-sm-6 col-md-6 col-lg-4">
            <div class="poster">
                <a href="/api/movies/<%=movie.id%>">
                    <img src="data:image/<%=movie.movieImage.contentType%>;base64,
                    <%=movie.movieImage.data.toString('base64')%>" class="main-img">
                    <div class="poster-info-overlay">
                        <h3><%= movie.title %></h3>
                        <h4>View More <i class="fa fa-arrow-right"></i></h4>
                    </div>
                </a>
              </div>	 
        </div> 
  <% }) %>

</div>

<%- include("../partials/footer") %>
